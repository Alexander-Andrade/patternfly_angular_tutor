<div ng-controller="ResourceCtrl">

  <!--Modal-->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div style="width : 800px" class="modal-dialog"  >
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <span class="pficon pficon-close"></span>
          </button>
          <h4 class="modal-title" id="myModalLabel">SVM</h4>
        </div>
        <div class="modal-body">
          <table class="table_td " border="1" align="center">
            <tr>
              <td style="background : #007a87 "> Department1 <p>60</p> </td>
              <td style="background : #3a9ca6 " > Department2 <p>40</p> </td>
              <td style="background : #92d400 " > Department2 <p>70</p> </td>
              <td style="background : #ace12e " > Department3 <p>20</p> </td>
              <td style="background : #f39d3c " > Free <p>80</p> </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>


    <div class="cards-pf">
      <div class="container-fluid container-cards-pf">

          <h1 class="text-center">Director</h1>
          <hr>

              <div ng-repeat="location in locations" class="row row-cards-pf" ng-if="$index % 2 == 0">
                <div class="col-xs-6">
                    <div resources-card title="{{locations[$index].name}}" price="locations[$index].price" progress-data1="locations[$index].svm"
                         progress-data2="locations[$index].storage" progress-data3="locations[$index].hours"></div>
                </div>
                <div ng-if="!$last">
                  <div class="col-xs-6">
                    <div resources-card title="{{locations[$index+1].name}}" price="locations[$index+1].price" progress-data1="locations[$index+1].svm"
                         progress-data2="locations[$index+1].storage" progress-data3="locations[$index+1].hours"></div>
                  </div>
                </div>
          </div>
      </div>
    </div>
</div>
