<div ng-controller="ResourceCtrl">
    <div class="cards-pf">
      <div class="container-fluid container-cards-pf">
        <div class="row row-cards-pf">
          <div class="col-xs-6 col-sm-4 col-md-4">
            <div class="card-pf">
              <div class="card-pf-heading">
                <h2 class="card-pf-title">General resources info</h2>
              </div>
                <div class="card-pf-body">


                    <div class="progress-description">
                      SVM
                    </div>
                    <div class="progress progress-label-top-right">
                        <div class="progress-bar">
                          <div class="subbar" style="width: {{svm_reserved_perc}}%; background-color: #f39d3c;opacity: 0.4;" data-toggle="tooltip" data-placement="top" title="{{svm_reserved_perc}}%"></div>
                          <div class="subbar" style="width: {{svm_used_perc}}%; background-color:#ec7a08;  opacity: 0.4;"
                          data-toggle="tooltip" data-placement="top" title="{{svm_used_perc}}%"></div>
                          <span><strong>{{svm_reserved}} of {{svm_total}}</strong> Used</span>
                        </div>
                    </div>


                    <div class="progress-description">
                      Storage
                    </div>
                    <div class="progress progress-label-top-right">
                        <div class="progress-bar">
                          <div class="subbar" style="width: {{storage_reserved_perc}}%; background-color: #ace12e;opacity: 0.4;" data-toggle="tooltip" data-placement="top" title="{{storage_reserved_perc}}%"></div>
                          <div class="subbar" style="width: {{storage_used_perc}}%; background-color:#92d400;  opacity: 0.4;"
                          data-toggle="tooltip" data-placement="top" title="{{storage_used_perc}}%"></div>
                          <span><strong>{{storage_reserved}} of {{storage_total}} GB</strong> Used</span>
                        </div>
                    </div>


                    <div class="progress-description">
                      Hours
                    </div>
                    <div class="progress progress-label-top-right">
                        <div class="progress-bar">
                          <div class="subbar" style="width: {{hours_reserved_perc}}%; background-color: #3a9ca6;opacity: 0.4;" data-toggle="tooltip" data-placement="top" title="{{hours_reserved_perc}}%"></div>
                          <div class="subbar" style="width: {{hours_used_perc}}%; background-color: #007a87;  opacity: 0.4;"
                          data-toggle="tooltip" data-placement="top" title="{{hours_used_perc}}%"></div>
                          <span><strong>{{hours_reserved}} of {{hours_total}}</strong> Used</span>
                        </div>
                    </div>

                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
        <script type="text/javascript">
            $(function () {
              $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
</div>
